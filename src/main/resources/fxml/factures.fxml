        <columns>
            <TableColumn text="Réservation" />
            <TableColumn text="Date" />
            <TableColumn text="Montant" />
            <TableColumn text="Mode de paiement" />
        </columns>
    </TableView>
    <VBox spacing="6">
        <Button text="Générer" />
        <Button text="Afficher" />
    </VBox>
</VBox>
