<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <Label text="Gestion Réservations" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <HBox spacing="8">
        <DatePicker promptText="Date début" />
        <DatePicker promptText="Date fin" />
        <Button text="Filtrer chambres libres" />
    </HBox>
    <TableView prefHeight="200">
        <columns>
            <TableColumn text="Client" />
            <TableColumn text="Chambre" />
            <TableColumn text="Date début" />
            <TableColumn text="Date fin" />
            <TableColumn text="Statut" />
        </columns>
    </TableView>
    <VBox spacing="6">
        <Button text="Créer" />
        <Button text="Annuler" />
    </VBox>
</VBox>
