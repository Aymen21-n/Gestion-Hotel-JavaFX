<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hotel.ui.GestionReservationsController" spacing="10">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <Label text="Gestion Réservations" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <HBox spacing="8">
        <DatePicker fx:id="filterDebut" promptText="Date début" />
        <DatePicker fx:id="filterFin" promptText="Date fin" />
        <Button text="Filtrer chambres libres" onAction="#onFiltrer" />
    </HBox>
    <TableView fx:id="reservationTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="clientColumn" text="Client" />
            <TableColumn fx:id="chambreColumn" text="Chambre" />
            <TableColumn fx:id="dateDebutColumn" text="Date début" />
            <TableColumn fx:id="dateFinColumn" text="Date fin" />
            <TableColumn fx:id="statutColumn" text="Statut" />
        </columns>
    </TableView>
    <HBox spacing="6">
        <Button text="Créer" onAction="#onCreer" />
        <Button text="Annuler" onAction="#onAnnuler" />
    </HBox>
</VBox>
