<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hotel.ui.GestionEmployesController" spacing="10">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <Label text="Gestion Employés" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TableView fx:id="employeTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="nomColumn" text="Nom" />
            <TableColumn fx:id="prenomColumn" text="Prénom" />
            <TableColumn fx:id="posteColumn" text="Poste" />
            <TableColumn fx:id="salaireColumn" text="Salaire" />
            <TableColumn fx:id="horaireColumn" text="Horaire" />
        </columns>
    </TableView>
    <HBox spacing="6">
        <Button text="Ajouter" onAction="#onAjouter" />
        <Button text="Modifier" onAction="#onModifier" />
        <Button text="Supprimer" onAction="#onSupprimer" />
    </HBox>
</VBox>
